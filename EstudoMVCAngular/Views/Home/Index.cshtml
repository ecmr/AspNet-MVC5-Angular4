<div class="jumbotron">
    <h1>ASP.NET MVC x AngularJS</h1>
    <p class="lead">Exemplo de uso do AngularJS com Asp.Net MVC.</p>
</div>

<script type="text/javascript" 
      src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js" >
</script>

<script type="text/javascript" 
        src="~/Scripts/app/cidades-controller.js"></script>

<div ng-app="CidadesApp" ng-controller="CidadesCtrl">
    <p>
        <b>Qtde. Regiões</b> {{qtdeRegioes}}
    </p>

    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th>Estado</th>
                <th>Capital</th>
                <th>Região</th>
            </tr>
            <tr ng-repeat="capital in capitais">
                <td>{{capital.estado}}</td>
                <td>{{capital.nomeCidade}}</td>
                <td>{{capital.regiao}}</td>
            </tr>
        </table>
    </div>
</div>